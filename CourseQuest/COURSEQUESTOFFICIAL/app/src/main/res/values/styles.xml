<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextLightMode</item>
        <item name="colorControlActivated">@color/colorTextLightMode</item>
        <item name="android:editTextColor">@color/colorTextLightMode</item>
    </style>

    <!-- Dark Mode application theme. -->
    <style name="AppTheme.Dark.NoActionBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccentDarkMode</item>
        <item name="android:textColor">@color/colorTextDarkMode</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorTextLightMode</item>
        <item name="android:editTextColor">@color/colorTextDarkMode</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Filter popup menu theme. -->
    <style name="PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColorSecondary">@color/colorTextLightMode</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
