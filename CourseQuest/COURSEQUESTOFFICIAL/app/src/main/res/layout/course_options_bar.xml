<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/likeButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_button"
        android:foreground="@drawable/ic_like"
        android:foregroundGravity="center"
        android:hapticFeedbackEnabled="true"
        android:textColor="@color/colorTextDarkMode"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/dislikeButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_button"
        android:foreground="@drawable/ic_dislike"
        android:foregroundGravity="center"
        android:textColor="@color/colorTextLightMode"
        android:textSize="16sp"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_button"
        android:foreground="@drawable/ic_share"
        android:foregroundGravity="center"
        style="?android:attr/buttonBarButtonStyle"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_button"
        android:foreground="@drawable/ic_cancel"
        android:foregroundGravity="center"
        style="?android:attr/buttonBarButtonStyle"/>

</LinearLayout>